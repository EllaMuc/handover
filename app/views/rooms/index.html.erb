
<div class="container">
  <h1>All Rooms</h1>
    <%= link_to "New Room", new_property_room_path(@property), class: "btn btn-primary mb-3" %>
      <% @property.rooms.each_slice(3) do |room_slice| %>
      <div class="card-deck">
        <% room_slice.each do |room| %>
          <% if room.name.present? %>
            <div class="card mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= room.name %></h5>
                <p class="card-text"><%= room.description %></p>
                <%= link_to "Delete", room_path(room), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this room?" }, class: "btn btn-danger" %>
              </div>
            </div>
         <% end %>
       <% end %>
      </div>
      <% end %>
    <%= link_to "Go to property overview", property_path(@property), class: "btn btn-primary" %>
</div>
