


<section class="vh-100 bg-image" style="background-image:url('http://cdn.home-designing.com/wp-content/uploads/2014/07/three-bedroom-apartment-layout.jpeg');">
  <div class="mask d-flex align-items-center h-90 gradient-custom-3">
    <div class="container h-90">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-9 col-md-9 col-lg-7 col-xl-5">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <div class="form-group">
                <h2 class="text-uppercase text-center mb-5 text-dark">All Rooms</h2>

                <%= simple_form_for [@property, @room], data: { insert_in_list_target: "form", action: "submit->in-list"} do |f| %>
                  <div class="form-outline mb-5">
                    <%= f.input :name, input_html: { class: "form-control form-control-lg" } %>
                    <%= f.input :description, input_html: { class: "form-control form-control-lg" } %>
                  </div>

                  <%= f.button :submit, class: "btn btn-primary mb-5" %>
                <% end %>

                <%= link_to "Go to property overview", property_path(@property), class: "btn btn-primary" %>

                <div class="list" data-insert-in-list-target="items">
                  <% @property.rooms.each do |r| %>
                    <p><%= link_to r.name, room_path(r), class:"btn btn-info" %></p>
                    <p><%= link_to "Delete", room_path(r), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger"%></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

