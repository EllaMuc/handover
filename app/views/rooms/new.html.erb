


<section class="vh-100 bg-image position-relative" style="background-image:url('http://cdn.home-designing.com/wp-content/uploads/2014/07/three-bedroom-apartment-layout.jpeg');">
<div class="position-absolute opacity-50 bg-dark" style="width: 100vw; height: 100vh"></div>
  <div class="bg-light p-5 position-absolute z-1 start-50 top-50 translate-middle" style="width:min(50%, 500px)">

                <h2>All Rooms</h2>
    
                <%= simple_form_for [@property, @room], data: { insert_in_list_target: "form", action: "submit->in-list"} do |f| %>
                  <div class="form-outline mb-5">
                    <%= f.input :name, input_html: { class: "form-control form-control-lg" } %>
                    <%= f.input :description, input_html: { class: "form-control form-control-lg" } %>
                  </div>

                  <%= f.button :submit, class: "btn btn-primary" %>
                <% end %>

                <%= link_to "Go to property overview >", property_path(@property) %>

                <div class="list" data-insert-in-list-target="items">
                  <% @property.rooms.each do |r| %>
                    <p><%= link_to r.name, room_path(r), class:"btn btn-info" %></p>
                    <p><%= link_to "Delete", room_path(r), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger"%></p>
                  <% end %>
                </div>
  </div>
</section>
