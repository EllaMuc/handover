<div class="container">
  <h1>Kontakt</h1>

  <div class="contact-form">
    <%= form_tag('/kontakt') do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, '', class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, '', class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, '', rows: 10, class: "form-control" %>
      </div>

      <%= submit_tag "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
