<div class="container">
  <h1>New Key</h1>
  <%= form_with(model: [@property, @key ]) do |form| %>

    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :type, class: "form-label" %>
      <%= form.text_field :type_of_key, class: "form-control" %>
    </div>
    <div>
      <%= link_to "Create Key", "#", class: "btn btn-primary", onclick: "document.querySelector('form').submit();" %>
      <%= link_to "Cancel", property_path(@property), class: "btn btn-secondary" %>
      <%= link_to "All Keys", property_keys_path(@property), class: "btn btn-info" %>
    </div>
  <% end %>
</div>
