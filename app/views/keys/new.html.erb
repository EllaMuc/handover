<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <div class="w-50 pr-5">
      <div class="d-flex align-items-center">
        <i class="fa-solid fa-arrow-left mr-2" onclick="history.back();"></i>
        <h2>New Key</h2>
      </div>
      <%= form_with(model: [@property, @key ]) do |form| %>
        <div class="form-group">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Enter title for the key" %>
        </div>
        <div class="form-group">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control form-control-lg", placeholder: "Number of key" %>
        </div>
        <div class="form-group">
          <%= form.label :type, class: "form-label" %>
          <%= form.text_field :type_of_key, class: "form-control form-control-lg", placeholder: "Special information" %>
        </div>
        <div>
          <a href="#"  type="submit" class="btn btn-primary btn-lg" onclick="document.querySelector('form').submit();">
            <i class="fas fa-key mr-1"></i>
            Create Key
          </a>
        </div>
      <% end %>
    </div>
    <div class="img-cont w-50 pl-5">
      <%= image_tag "key.jpg", class: "form-img img-fluid" %>
    </div>
  </div>
</div>
