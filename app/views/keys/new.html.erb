<div class="container">
  <div class="d-flex justify-content-between">
    <div>
      <div class="d-flex align-items-center">
        <i class="fas fa- m"></i>
        <h2>New Key</h2>
      </div>
      <%= form_with(model: [@property, @key ]) do |form| %>
        <div class="form-group">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter title for the key..." %>
        </div>
        <div class="form-group">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= form.label :type, class: "form-label" %>
          <%= form.text_field :type_of_key, class: "form-control" %>
        </div>
        <div>
          <a href="#"  type="submit" class="btn btn-primary" onclick="document.querySelector('form').submit();">
            <i class="fas fa-key mr-1"></i>
            Create Key
          </a>
          <%= link_to property_keys_path(@property), class: "btn btn-primary" do %>
           <i class="fas fa-key mr-1"></i>
            Create Key
          <% end %>
          <%= link_to "Cancel", property_path(@property), class: "btn btn-secondary" %>
          <%= link_to "All Keys", property_keys_path(@property), class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
    <div class="img-cont">
      <img src="key1" alt="Key">
    </div>
  </div>
</div>
