<div class="handoverKey">
  <div class="ms-5 pt-5" style="max-width: 500px;" >
    <article class="card-body mx-auto">
      <div class="row">
        <div class= "card card-signup p-3">
          <div class="d-flex align-items-center">
            <%= link_to property_path(@property), class: "black_icon" do %>
              <i class="fa-solid fa-square-caret-left mr-2 pb-3"></i>
            <% end %>
            <h2>New Key</h2>
          </div>
          <%= form_with(model: [@property, @key ]) do |form| %>
            <div class="form-group">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Enter title for the key" %>
            </div>
            <div class="form-group">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_field :description, class: "form-control form-control-lg", placeholder: "Number of key" %>
            </div>
            <div class="form-group">
              <%= form.label :type, class: "form-label" %>
              <%= form.text_field :type_of_key, class: "form-control form-control-lg", placeholder: "Special information" %>
            </div>
            <div>
              <a href="#"  type="submit" class="btn btn-outline-dark btn-lg" onclick="document.querySelector('form').submit();">
                <i class="fas fa-key mr-1"></i>
                Create Key
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </article>
  </div>
</div>
