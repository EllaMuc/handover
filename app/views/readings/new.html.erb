 <div class="container">
  <h1>New Reading</h1>

  <%= form_with(model: [@property, @reading]) do |form| %>

    <div class="form-group">
      <%= form.label :type_of_reading,class: "form-label"%>
      <%= form.text_field :type_of_reading, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :result, class: "form-label" %>
      <%= form.text_field :result, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Reading" %>
    </div>
  <% end %>

  <%= link_to "Back to property", property_path(@property), class: "btn btn-primary" %>
</div>
