<div class="meterReading">
  <div class="ms-5 pt-5" style="max-width: 500px;">
    <article class="card-body mx-auto">
      <div class="row">
        <div class="card card-signup p-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <%= link_to property_path(@property), class:"black_icon" do %>
                <i class="fa-solid fa-square-caret-left mr-2 pb-3"></i>
              <% end %>
              <h1>Readings</h1>
            </div>
          </div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th>Type</th>
                  <th>Meter index</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @readings.each do |reading| %>
                  <tr>
                    <td><%= reading.type_of_reading %></td>
                    <td><%= reading.result %></td>
                    <td><%= button_to "", property_reading_path(@property, reading),
                      method: :delete, data: { confirm: 'Are you sure?' }, class: "fas fa-trash" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="card-footer">
            <%= link_to "New Reading", new_property_reading_path, class: "btn btn-outline-dark" %>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
