<div class="container">
  <h1>Properties</h1>

  <div class="row">
    <% @properties.each do |property| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body d-flex flex-column justify-content-between" style="height: 230px;">
            <div>
              <h5 class="card-title"><%= property.address %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= property.city %>, <%= property.postcode %></h6>
              <p class="card-text">
                <% if property.move_in.present? %>
                  Move-in: <%= property.move_in %><br>
                <% end %>
                <% if property.move_out.present? %>
                  Move-out: <%= property.move_out %><br>
                <% end %>
                Visible: <%= property.visible %>
              </p>
            </div>
            <div class="mt-2">
              <%= link_to "Details", property_path(property), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Create Property", new_property_path, class: "btn btn-primary" %>
</div>
